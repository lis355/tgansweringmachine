{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "start",
			"type": "node",
			"request": "launch",
			"skipFiles": [
				"<node_internals>/**"
			],
			"program": "${workspaceFolder}/start.js",
			"console": "integratedTerminal",
			"env": {
				"DEVELOP": "true"
			}
		},
		{
			"name": "authorize-telegram-client",
			"type": "node",
			"request": "launch",
			"skipFiles": [
				"<node_internals>/**"
			],
			"program": "${workspaceFolder}/start.js",
			"console": "integratedTerminal",
			"env": {
				"DEVELOP": "true"
			},
			"args": [
				"--auth"
			]
		},
		{
			"name": "service-windows-install",
			"type": "node",
			"request": "launch",
			"skipFiles": [
				"<node_internals>/**"
			],
			"program": "${workspaceFolder}/service/windows/serviceInstall.js",
			"cwd": "${workspaceFolder}/service/windows/"
		},
		{
			"name": "service-windows-uninstall",
			"type": "node",
			"request": "launch",
			"skipFiles": [
				"<node_internals>/**"
			],
			"program": "${workspaceFolder}/service/windows/serviceUninstall.js",
			"cwd": "${workspaceFolder}/service/windows/"
		}
	]
}